# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=false

# Environment
ENVIRONMENT=development  # development, staging, production

# LLM Configuration
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here
OPENAI_ORG_ID=

# Model Selection
DEFAULT_LLM_MODEL=gpt-3.5-turbo
DEFAULT_EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# Vector Database - Qdrant
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_GRPC_PORT=6334
QDRANT_API_KEY=
QDRANT_COLLECTION_NAME=enterprise_rag

# Redis Cache
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_TTL=86400  # 24 hours in seconds

# MongoDB
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_USER=admin
MONGODB_PASSWORD=password
MONGODB_DATABASE=enterprise_rag
MONGODB_AUTH_SOURCE=admin

# RabbitMQ
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=admin
RABBITMQ_PASSWORD=password
RABBITMQ_VHOST=/

# Celery
CELERY_BROKER_URL=amqp://admin:password@localhost:5672/
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# Monitoring
ENABLE_METRICS=true
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT=json  # json, text
LOG_FILE=logs/app.log

# Security
JWT_SECRET_KEY=your-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=30

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_ALLOW_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Document Processing
MAX_DOCUMENT_SIZE_MB=50
ALLOWED_FILE_TYPES=pdf,docx,xlsx,pptx,txt
OCR_ENABLED=true
OCR_QUALITY_THRESHOLD=0.7

# Chunking
CHUNK_SIZE=512  # tokens
CHUNK_OVERLAP=50  # tokens
MIN_CHUNK_SIZE=100  # tokens
MAX_CHUNK_SIZE=1000  # tokens

# Retrieval
HYBRID_SEARCH_VECTOR_WEIGHT=0.7
HYBRID_SEARCH_BM25_WEIGHT=0.3
RERANKING_ENABLED=true
RERANKING_MODEL=cross-encoder/ms-marco-MiniLM-L-6-v2
DEFAULT_TOP_K=5
MAX_TOP_K=20

# Generation
MAX_CONTEXT_TOKENS=3000
MAX_OUTPUT_TOKENS=1000
DEFAULT_TEMPERATURE=0.3
STREAMING_ENABLED=true

# Guardrails
PII_DETECTION_ENABLED=true
FACT_CHECKING_ENABLED=true
TOXICITY_THRESHOLD=0.7
HALLUCINATION_THRESHOLD=0.8

# Caching
ENABLE_EMBEDDING_CACHE=true
ENABLE_RESPONSE_CACHE=true
CACHE_L1_SIZE=1000  # in-memory
CACHE_L1_TTL=300  # 5 minutes
CACHE_L2_TTL=86400  # 24 hours

# GPU Configuration
CUDA_VISIBLE_DEVICES=0
GPU_MEMORY_FRACTION=0.8
BATCH_SIZE=32

# Evaluation
ENABLE_EVALUATION=false
EVALUATION_SAMPLE_RATE=0.1  # 10% of queries

# Compliance
AUDIT_LOGGING_ENABLED=true
DATA_RETENTION_DAYS=365
PII_REDACTION_ENABLED=true
ENCRYPTION_KEY=your-encryption-key-here

# Feature Flags
FEATURE_MULTIMODAL=false
FEATURE_GRAPH_RAG=false
FEATURE_ACTIVE_LEARNING=false
